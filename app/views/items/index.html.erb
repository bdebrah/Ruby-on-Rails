<p id="notice"><%= notice %></p>

<h1>Items</h1>
<%= form_tag items_path, :method => 'get', :id => "items_search" do %>
  <p>
    <%= text_field_tag :from %>
    <%= text_field_tag :to %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Product</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>User_Ids</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.product %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= item.user_ids %></td>
        <td><%= image_tag(item.picture.url(:medium), :class => "card-img center-block") %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Item', new_item_path %>
